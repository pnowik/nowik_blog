<%= form_for(@post, url: admin_post_path(@post.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :subtitle, class: 'control-label' %>
    <%= f.text_area :subtitle, class: 'form-control', rows: 2 %>
  </div>

  <div class="form-group">
    <%= f.label :body, class: 'control-label' %>
    <%= f.text_area :body, class: 'form-control', rows: 6 %>
  </div>

  <%= f.submit 'Save', url: admin_posts_path, class: 'btn btn-primary' %>
<% end %>