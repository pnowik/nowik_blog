<div class="manage-header">
  <h1>Manage Posts <%= content_tag(:small, link_to('new', new_admin_post_path(@post))) %></h1>
</div>

<div class="search-bar">
  <%= form_tag(admin_posts_path, method: :get) do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag 'Search title', name: nil, class: 'btn btn-primary' %>
  <% end %>
</div>


<table class="my-table">
  <tr>
    <th class="my-th">post_id</th>
    <th class="my-th">user</th>
    <th class="my-th">title</th>
    <th class="my-th">date</th>
    <th class="my-th">show_post</th>
    <th class="my-th">edit_post</th>
    <th class="my-th">delete_post</th>
    <th class="my-th">post_comments</th>
  </tr>
  <% @posts.each do |p| %>
    <tr>
      <td class="my-td"><%= p.id %></td>
      <td class="my-td"><%= p.user.name %></td>
      <td class="my-td"><%= link_to p.title, admin_post_path(p.id) %></td>
      <td class="my-td"><%= p.created_at %></td>
      <td class="my-td"><%= link_to 'show', admin_post_path(p.id) %></td>
      <td class="my-td"><%= link_to 'edit', edit_admin_post_path(p.id) %></td>
      <td class="my-td"><%= link_to 'delete', admin_post_path(p.id), method: :delete, data: {confirm: "Are you sure you want to delete this permanently?"} %></td>
      <td class="my-td"><%= link_to 'comments', admin_post_comments_path(p.id) %></td>
    </tr>
  <% end %>
</table>

<div class="my-pagination">
  <%= will_paginate @posts%>
</div>

