<h1>Manage Posts <%= content_tag(:small, link_to('new', new_admin_post_path(@post))) %></h1>

<%= form_tag(admin_posts_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search title', name: nil %>
<% end %>


<table style="width:100%">
  <tr>
    <th>post_id</th>
    <th>title</th>
    <th>show_post</th>
    <th>edit_post</th>
    <th>delete_post</th>
    <th>post_comments</th>
  </tr>
  <% @posts.each do |p| %>
    <tr>
      <td><%= p.id %></td>
      <td><%= link_to p.title, admin_post_path(p.id) %></td>
      <td><%= link_to 'show', admin_post_path(p.id) %></td>
      <td><%= link_to 'edit', edit_admin_post_path(p.id) %></td>
      <td><%= link_to 'delete', admin_post_path(p.id), method: :delete, data: {confirm: "Are you sure you want to delete this permanently?"} %></td>
      <td><%= link_to 'comments', admin_post_comments_path(p.id) %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>


