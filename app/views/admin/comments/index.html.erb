<h1>Manage Post Comments </h1>
<table style="width:100%">
  <tr>
    <th>post_id</th>
    <th>comment_id</th>
    <th>body</th>
    <th>published</th>
    <th>show_comment</th>
    <th>delete_comment</th>
  </tr>
  <% @comment.each do |c| %>
    <tr>
      <td><%= c.post_id %></td>
      <td><%= c.id %></td>
      <td><%= c.body %></td>
      <td>
        <% if c.published %>
          published
        <% else %>
          <%= link_to 'publish', publish_admin_post_comment_path(@post, c.id), method: :put, data: {confirm: "Are you sure you want to publish this?"} %>
        <% end %>
      </td>
      <td><%= link_to 'show', admin_post_comment_path(@post, c.id) %></td>
      <td><%= link_to 'delete', admin_post_comment_path(@post, c.id), method: :delete, data: {confirm: "Are you sure you want to delete this permanently?"} %></td>
    </tr>
  <% end %>
</table>